<div class="background">
    <div class="content">
        <h1 class="main-header">Life is Awesome</h1>
        <p class="text-center text-medium">"You only live once"</p>
    </div>
</div>

<div class="background-2">
    <div class="content text-center">
        <h1 class="white">Life Quote</h1>
        <hr class="light">
        <p class="text-small">“Thousands of candles can be lighted from a single candle, and the life of the candle will not be shortened. Happiness never decreases by being shared.”</p>
    </div>
</div>

<section class="features-container">
    <h1 class="feature-title text-center">
        Traveling Around The World
    </h1>
    <div class="features text-center">
        <div class="feature">
            <%= fa_icon 'globe 4x', class: 'icon-settings'%>
            <h2>Exclusive Package</h2>
        </div>
        <div class="feature">
            <%= fa_icon 'bed 4x', class: 'icon-settings'%>
            <h2>Peace of Mind</h2>
        </div>
        <div class="feature">
            <%= fa_icon 'plane 4x', class: 'icon-settings'%>
            <h2>Best Travel Guide</h2>
        </div>
        <div class="feature">
            <%= fa_icon 'suitcase 4x', class: 'icon-settings'%>
            <h2>Explore Something</h2>
        </div>
    </div>
</section>

