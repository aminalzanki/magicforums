<div class="text-center">
    <h1>Posts</h1>
    <% @posts.each do |post| %>
    <div class="posts-container text-center">
        <h3><%= post.title %></h3>
        <h5><%= post.body %></h5>
        <%= link_to "View Comments", topic_post_comments_path(@topic, post) %>
        <div class="text-center">
            <%= link_to "Delete", topic_post_path(@topic, post), method: :delete, data: { confirm: "Delete?" } %>
        </div>
    </div>
    <% end %>
</div>
