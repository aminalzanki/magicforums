<div id="post-<%= post.id %>"class="posts-container text-center">
    <h3><%= post.title %></h3>
    <h5><%= post.body %></h5>

    <div class="form-group">
        <h4 class="text-center">
            Post Image
        </h4>
        <div id="preview-image">
            <% if post.image? %>
            <%= image_tag post.image, class: "img-settings img-responsive center-block" %>
            <% end %>
        </div>
    </div>
    <%= link_to "View Comments", topic_post_comments_path(post.topic, post) %>
    <div class="text-center">
        <%= link_to "Edit Post", edit_topic_post_path(post.topic, post), remote: true %>
    </div>
    <div class="text-center">
        <%= link_to "Delete Post", topic_post_path(post.topic, post), method: :delete, data: { confirm: "Delete?" } %>
    </div>
</div>
