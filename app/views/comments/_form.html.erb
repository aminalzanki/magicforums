<%= form_for(comment, url: topic_post_comments_path(post.topic, post), remote: true, html: { id: "post-create-form" }) do |f| %>
<h1 class="text-center">
    Create Comment
</h1>

<div class="form-group">
    <h4>
        <%= f.label :text_field, "Body" %>
    </h4>
    <%= f.text_field :body, id: "commment_body_field", class: 'form-control' %>
</div>

<div class="form-group text-center">
    <%= f.submit "Create Comment", class: "btn btn-success btn-lg" %>
</div>
<% end %>
