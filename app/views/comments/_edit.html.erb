<div class="text-center margin-create-topic">
    <%= form_for(comment, url: topic_post_comment_path(comment.post.topic, comment.post, comment), remote: true, html: { id: "topic-update-form" }) do |f| %>
    <h1 class="text-center">
        Update Comments
    </h1>

    <div class="form-group">
        <h4 class="text-center">
            Comment Image
        </h4>
        <div id="preview-image">
            <% if comment.image? %>
            <%= image_tag comment.image, class: "img-settings img-responsive center-block" %>
            <% end %>
        </div>
    </div>

    <div class="form-group">
        <%= f.file_field :image, id: "comments_image_field", class: 'form-control image-uploader' %>
    </div>

    <div class="form-group">
        <h4>
            <%= f.label :text_field, "Body" %>
        </h4>
        <%= f.text_field :body, id: "comments_body_field", class: 'form-control' %>
    </div>

    <div class="form-group text-center">
        <%= f.submit "Update Comments", class: "btn btn-success btn-lg" %>
    </div>
    <% end %>
</div>
