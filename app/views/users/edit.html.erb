<div class="text-center margin-create-topic">
    <%= form_for(@user, url: user_path(@user), html: { id: "user-update-form" }) do |f| %>
    <h1 class="text-center">
        Update Profile
    </h1>

    <div class="form-group">
        <h4>
            <%= f.label :text_field, "Username" %>
        </h4>
        <%= f.text_field :username, required: true, id: "user_username_field", class: 'form-control' %>
    </div>

    <div class="form-group">
        <h4>
            <%= f.label :text_field, "Email" %>
        </h4>
        <%= f.text_field :email, id: "user_email_field", class: 'form-control' %>
    </div>

    <div class="form-group">
        <h4>
            <%= f.label :text_field, "Password" %>
        </h4>
        <%= f.password_field :password, id: "user_password_field", class: 'form-control' %>
    </div>

    <div class="form-group text-center">
        <%= f.submit "Update Profile", class: "btn btn-success btn-lg" %>
    </div>
    <% end %>
</div>
