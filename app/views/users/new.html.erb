<div class="text-center margin-create-topic">

    <%= form_for(@user, url: users_path, html: { id: "user-create-form" }) do |f| %>
    <h1 class="text-center">
        Create Profile
    </h1>

    <div class="form-group">
        <h4>
            <%= f.label :text_field, "Username" %>
        </h4>
        <%= f.text_field :username, required: true, id: "username_field", class: 'form-control' %>
    </div>

    <div class="form-group">
        <h4>
            <%= f.label :email_field, "Email" %>
        </h4>
        <%= f.email_field :email, required: true, id: "email_field", class: 'form-control' %>
    </div>

    <div class="form-group">
        <h4>
            <%= f.label :text_field, "Password" %>
        </h4>
        <%= f.password_field :password, required: true, id: "password_digest_field", class: 'form-control' %>
    </div>

    <div class="form-group text-center">
        <%= f.submit "Create Profile", class: "btn btn-success btn-lg" %>
    </div>
    <% end %>
</div>
